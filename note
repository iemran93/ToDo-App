import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;

public class HandleIOExceptionAndReadContent {
    public static void main(String[] args) {
        // Create a new File object for the file that we want to read
        File file = new File("myfile.txt");

        // Try to read the file
        try {
            // Create a new BufferedReader object for the file
            BufferedReader br = new BufferedReader(new FileReader(file));

            // Read the file line by line
            String line;
            while ((line = br.readLine()) != null) {
                // Process the line
                System.out.println(line);
            }

            // Close the BufferedReader object
            br.close();
        } catch (IOException e) {
            // Handle the IOException
            if (e.getMessage().equals("File already exists")) {
                // The file exists, so read its content
                System.out.println("The file exists, so reading its content:");

                // Try to read the file again
                try {
                    // Create a new BufferedReader object for the file
                    BufferedReader br = new BufferedReader(new FileReader(file));

                    // Read the file line by line
                    String line;
                    while ((line = br.readLine()) != null) {
                        // Process the line
                        System.out.println(line);
                    }

                    // Close the BufferedReader object
                    br.close();
                } catch (IOException e1) {
                    // Handle the IOException
                    System.out.println("Error reading file: " + e1.getMessage());
                }
            } else {
                // Some other IOException occurred
                System.out.println("Error reading file: " + e.getMessage());
            }
        }
    }
}
